@model LancheListViewModel


<div>
    <h2>@Model.CategoriaAtual</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model.Lanches)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@item.ImagemUrl" alt="@item.Nome" /></p>
                <h3>Preço: @item.Preco.ToString("c")</h3>
                <h4>@item.Nome</h4>
                <p>@item.DescricaoCurta</p>
            </div>
        }
    </div>
</div>